<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parse.starter.ChatActivity">

    <EditText
        android:id="@+id/chatEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:hint="Send Message"
        android:inputType="textPersonName"
        android:layout_alignRight="@+id/sendChatButton"
        android:layout_alignEnd="@+id/sendChatButton"
        android:layout_alignParentBottom="true" />

    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chatEditText"
        android:layout_alignLeft="@+id/chatEditText"
        android:layout_alignStart="@+id/chatEditText"
        android:layout_marginBottom="14dp"
        android:layout_alignRight="@+id/sendChatButton"
        android:layout_alignEnd="@+id/sendChatButton" />

    <Button
        android:id="@+id/sendChatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chatEditText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:onClick="sendChat"
        android:text="Send" />
</RelativeLayout>
